<div class="row"> 
    <p>Enter your name and select your working days</p>

<div class="message"></div>

{{#if message}}
    <div class="">{{message}}</div>
    {{else}}
    <div class="">
        <p class='flash'> {{messages.error}}</p>
    </div>
    {{/if}}

    <div class="textbox">
        {{!-- <form action=""> --}}
            <strong>Name: </strong>
            <input type="text" name="name" class="name" placeholder="enter your name">
        {{!-- </form> --}}
