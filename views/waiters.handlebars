            <input type="checkbox" id="day5" name="day5" value="Friday"> Friday<br>
            <input type="checkbox" id="day6" name="day6" value="Saturday"> Saturday<br>
            <input type="checkbox" id="day7" name="day7" value="Sunday"> Sunday<br>
            <br>
            <input type="submit" value="Submit">
