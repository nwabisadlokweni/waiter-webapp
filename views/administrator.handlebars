<div class="row">

  <div class="header">
    <div class="bhelekazi">
      <h1><strong> Bhelekazi </strong></h1>
      <img src="/images/images.png" alt="coffee">
    </div>
  </div>

  <h2>Hello there, welcome to Bhelekazi The COFFEE Shop</h2>

  <h3 class="red">over booked</h3>
  <h3 class="green">enough</h3>
  <h3 class="orange">still need more</h3>

  <hr>

  <div class="clear">
    <p class="clear"></p>{{messages.resetSucceded}}</p>
  </div>

  <br>

  <div class="resetSucceded"></div>

  <form action="/days" method="GET"></form>
  <table>
    <caption><strong>Shifts Tables</strong></caption>

    <tr>
      {{#each selectedDay}}
      <th>
        {{this.days}}
      </th>
      {{/each}}
    </tr>

    <tr>
      {{#each selectedWaiter}}
      <td>
        {{this.names}}
      </td>
      {{/each}}
    </tr>
  </table>

  <br>

  <div>
    <a href="/">
      <button type="submit" class="back">back</button>
    </a>
  </div>

  <br>

  <div>
    <form action="/reset" method="GET">
      <a href="/reset"></a>
      <button type="submit" class="reset">Reset</button>
    </form>
  </div>

</div>

<script>
  setTimeout(function () {
    //document.querySelector(".flash").innerHTML = ""
